name:                robinhood
version:             0.1.0.0
-- synopsis:
-- description:
homepage:            https://github.com/pacifica/pacifica-robinhood-migration/robinhood#readme
license:             LGPL
license-file:        LICENSE
author:              Mark Borkum
maintainer:          mark.borkum@pnnl.gov
copyright:           2017 Pacific Northwest National Laboratory
category:            Web
build-type:          Simple
extra-source-files:  README.md
cabal-version:       >=1.10

library
  hs-source-dirs:      src
  exposed-modules:     Robinhood
                     , Robinhood.EntryType
                     , Robinhood.Types
  build-depends:       base >= 4.7 && < 5
                     , aeson
                     , persistent-template
                     , template-haskell
                     , text
  default-language:    Haskell2010
  ghc-options:         -Wall

executable robinhood-exe
  hs-source-dirs:      app
  main-is:             Main.hs
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  build-depends:       base
                     , robinhood
  default-language:    Haskell2010

test-suite robinhood-test
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             Spec.hs
  build-depends:       base
                     , monad-logger
                     , mtl
                     , persistent
                     , persistent-sqlite
                     , QuickCheck
                     , resourcet
                     , robinhood
                     , text
                     , transformers
  ghc-options:         -Wall -threaded -rtsopts -with-rtsopts=-N
  default-language:    Haskell2010

source-repository head
  type:     git
  location: https://github.com/pacifica/pacifica-robinhood-migration/robinhood
